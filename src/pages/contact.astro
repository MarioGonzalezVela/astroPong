---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Header />
<Layout title="Contacto"
  ><section class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center mb-8 text-black-600">
      Contacta con nosotros
    </h2>
    <form
      action="#"
      method="POST"
      class="max-w-lg mx-auto bg-white shadow-md rounded-md p-8"
    >
      <div class="mb-6">
        <label for="nombre" class="block text-gray-700 font-semibold mb-2"
          >Nombre</label
        >
        <input
          type="text"
          name="nombre"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Nombre"
          required
        />
      </div>

      <div class="mb-6">
        <label for="email" class="block text-gray-700 font-semibold mb-2"
          >E-mail</label
        >
        <input
          type="email"
          name="email"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Correo"
          required
        />
      </div>

      <div class="mb-6">
        <label for="mensaje" class="block text-gray-700 font-semibold mb-2"
          >Mensaje</label
        >
        <textarea
          name="mensaje"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Escribe un mensaje"
          required></textarea>
      </div>

      <div class="text-center">
        <button
          type="submit"
          class="bg-gray-700 hover:bg-gray-500 text-white font-semibold py-2 px-4 rounded-md"
        >
          Enviar
        </button>
      </div>
    </form>
  </section></Layout
>
<Footer />
